FROM node:20-alpine

WORKDIR /app

ENV NODE_ENV=development

# Install deps first for caching (retry/timeout for flaky networks during build)
COPY package*.json ./
RUN npm config set fetch-retries 20 && npm config set fetch-retry-mintimeout 60000 && npm config set fetch-retry-maxtimeout 300000 && npm config set fetch-timeout 1200000 && npm install

# App source (overridden by bind mount in docker-compose for local dev)
COPY . .

EXPOSE 3002

CMD ["npm", "run", "dev"]

