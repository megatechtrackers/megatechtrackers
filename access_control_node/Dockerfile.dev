# Development Dockerfile for Access Gateway
FROM node:20-alpine

WORKDIR /app

# Install dependencies (retry/timeout for flaky networks during build)
COPY package*.json ./
RUN npm config set fetch-retries 20 && npm config set fetch-retry-mintimeout 60000 && npm config set fetch-retry-maxtimeout 300000 && npm config set fetch-timeout 1200000 && npm ci

# Copy source code
COPY tsconfig.json ./
COPY src ./src

# Create logs directory
RUN mkdir -p /app/logs

EXPOSE 3001

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Development mode with hot reload
CMD ["npm", "run", "dev"]
