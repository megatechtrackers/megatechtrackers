{
  "title": "Access Gateway - Status",
  "uid": "access-gateway-status",
  "tags": [
    "access-gateway",
    "api",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Service Health",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Access Gateway Up",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 4,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(up{job=\"access-gateway\"}) or vector(0)",
          "refId": "A",
          "legendFormat": "",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "\u274c DOWN",
                  "color": "red"
                }
              }
            },
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "\u2705 UP",
                  "color": "green"
                }
              }
            }
          ],
          "noValue": "0",
          "displayName": "Access Gateway Up"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "orientation": "horizontal",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      }
    },
    {
      "id": 3,
      "title": "HTTP Traffic",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 5
      },
      "collapsed": false
    },
    {
      "id": 4,
      "title": "HTTP Requests Total",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 6,
        "w": 12,
        "h": 7
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(sum(rate(http_requests_total{job=\"access-gateway\"}[5m])) by (method, status_code)) or vector(0)",
          "refId": "A",
          "legendFormat": "Http Requests"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": {
            "mode": "palette-classic"
          },
          "noValue": "0",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": true,
            "gradientMode": "none",
            "showPoints": "never",
            "pointSize": 5
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 5,
      "title": "HTTP Request Duration (p99)",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 6,
        "w": 12,
        "h": 7
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{job=\"access-gateway\"}[5m])) by (le, route))) or vector(0)",
          "refId": "A",
          "legendFormat": "p{{quantile}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "palette-classic"
          },
          "noValue": "0",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": true,
            "gradientMode": "none",
            "showPoints": "never",
            "pointSize": 5
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 6,
      "title": "Embed URL & Cache",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 13
      },
      "collapsed": false
    },
    {
      "id": 7,
      "title": "Embed URL Generations",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 14,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(sum(rate(embed_url_generation_total{job=\"access-gateway\"}[5m])) by (status)) or vector(0)",
          "refId": "A",
          "legendFormat": "Embed Url Generation"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": {
            "mode": "palette-classic"
          },
          "noValue": "0",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": true,
            "gradientMode": "none",
            "showPoints": "never",
            "pointSize": 5
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 8,
      "title": "Cache Hits / Misses",
      "type": "timeseries",
      "gridPos": {
        "x": 12,
        "y": 14,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(sum(rate(cache_hits_total{job=\"access-gateway\"}[5m])) by (cache_type)) or vector(0)",
          "refId": "A",
          "legendFormat": "Hits {{cache_type}}"
        },
        {
          "expr": "(sum(rate(cache_misses_total{job=\"access-gateway\"}[5m])) by (cache_type)) or vector(0)",
          "refId": "B",
          "legendFormat": "Misses {{cache_type}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "noValue": "0",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": true,
            "gradientMode": "none",
            "showPoints": "never",
            "pointSize": 5
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
    {
      "id": 9,
      "title": "Current State",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "collapsed": false
    },
    {
      "id": 10,
      "title": "Active Connections",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 21,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(active_connections{job=\"access-gateway\"}) or vector(0)",
          "refId": "A",
          "legendFormat": "",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "fixed",
            "fixedColor": "#3274D9"
          },
          "noValue": "0",
          "displayName": "Active Connections"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "orientation": "horizontal",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      }
    },
    {
      "id": 11,
      "title": "Errors Total",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 21,
        "w": 6,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(sum(errors_total{job=\"access-gateway\"}) by (error_type)) or vector(0)",
          "refId": "A",
          "legendFormat": "",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": null,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 10,
                "color": "red"
              }
            ]
          },
          "color": {
            "mode": "thresholds"
          },
          "noValue": "0",
          "displayName": "Errors Total"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value",
        "orientation": "horizontal",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "time": {
    "from": "now-1h",
    "to": "now"
  }
}