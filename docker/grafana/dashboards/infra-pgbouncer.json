    {
      "id": 5,
      "title": "Connection Pool Usage",
      "type": "timeseries",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "sum(pgbouncer_pools_client_active_connections) by (database) or vector(0)",
          "refId": "A",
          "legendFormat": "{{database}} - Client Active"
        },
        {
          "expr": "sum(pgbouncer_pools_client_waiting_connections) by (database) or vector(0)",
          "refId": "B",
          "legendFormat": "{{database}} - Client Waiting"
        },
        {
          "expr": "sum(pgbouncer_pools_server_active_connections) by (database) or vector(0)",
          "refId": "C",
          "legendFormat": "{{database}} - Server Active"
        },
        {
          "expr": "sum(pgbouncer_pools_server_idle_connections) by (database) or vector(0)",
          "refId": "D",
          "legendFormat": "{{database}} - Server Idle"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "noValue": "0",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 20,
            "lineWidth": 2,
            "spanNulls": true,
            "gradientMode": "none",
            "showPoints": "never",
            "pointSize": 5
          }
        }
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    },
