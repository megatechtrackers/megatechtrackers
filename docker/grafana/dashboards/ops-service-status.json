{
  "title": "Operations Service - Status",
  "uid": "ops-service",
  "tags": [
    "ops-service",
    "device-configuration",
    "monitoring"
  ],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "System Overview",
      "type": "row",
      "gridPos": {
        "h": 1,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "collapsed": false
    },
    {
      "id": 2,
      "title": "Service Info",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 1,
        "w": 24,
        "h": 5
      },
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "ops_service_units_registered_total or vector(0)",
          "refId": "A",
          "legendFormat": "Units Registered",
          "instant": true
        },
        {
          "expr": "ops_service_device_types_total or vector(0)",
          "refId": "B",
          "legendFormat": "Device Types",
          "instant": true
        },
        {
          "expr": "ops_service_http_requests_in_progress or vector(0)",
          "refId": "C",
          "legendFormat": "HTTP In Progress",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "noValue": "0",
          "displayName": "Service Info"
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "auto",
        "orientation": "horizontal",
        "justifyMode": "auto",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      }
    },
    {
      "id": 3,
      "title": "Command Queue Status",
      "type": "row",
