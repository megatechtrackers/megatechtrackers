      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "targets": [
        {
          "expr": "(node_memory_MemTotal_bytes - node_memory_MemFree_bytes - node_memory_Buffers_bytes - node_memory_Cached_bytes) or vector(0)",
          "refId": "A",
          "legendFormat": "Used"
        },
        {
          "expr": "node_memory_Buffers_bytes or vector(0)",
          "refId": "B",
          "legendFormat": "Buffers"
        },
        {
          "expr": "node_memory_Cached_bytes or vector(0)",
          "refId": "C",
          "legendFormat": "Cached"
        },
        {
          "expr": "node_memory_MemFree_bytes or vector(0)",
          "refId": "D",
          "legendFormat": "Free"
        }
