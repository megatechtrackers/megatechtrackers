          "noValue": "0",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 80,
            "lineWidth": 2,
            "spanNulls": true,
            "gradientMode": "none",
            "showPoints": "never",
            "pointSize": 5,
            "stacking": {
              "mode": "normal",
              "group": "A"
            }
          }
        }
