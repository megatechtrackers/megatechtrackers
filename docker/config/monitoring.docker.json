{
  "monitoring": {
    "enabled": true,
    "host": "0.0.0.0",
    "port": 8080,
    "update_interval_seconds": 2,
    "enable_prometheus": true,
    "enable_websocket": false,
    "dashboard_title": "Fleet Service",
    "description": "Megatechtrackers - Fleet monitoring configuration"
  },
  "logging": {
    "level": "INFO",
    "log_file": "logs/monitoring.log",
    "max_bytes": 10485760,
    "backup_count": 5,
    "json_format": false,
    "description": "Logging configuration for monitoring service"
  },
  "authentication": {
    "api_key_required": false,
    "api_key_env_var": "MONITORING_API_KEY",
    "description": "Authentication configuration - set MONITORING_API_KEY env var to enable"
  }
}
