# =============================================================================
# Megatechtrackers - Root Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the required values
# These values are auto-generated by docker-start scripts, but you can override them
# =============================================================================

# -----------------------------------------------------------------------------
# Grafana Configuration
# -----------------------------------------------------------------------------
# Grafana service account API key (auto-generated on first startup)
GRAFANA_API_KEY=

# Grafana admin credentials (defaults: admin/admin)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Public URL for Grafana embeds (used by access gateway)
GRAFANA_PUBLIC_URL=http://localhost:3200

# -----------------------------------------------------------------------------
# Frappe Configuration
# -----------------------------------------------------------------------------
# Frappe API credentials for Administrator user (auto-generated on first startup)
FRAPPE_API_KEY=
FRAPPE_API_SECRET=

# Public Frappe URL
NEXT_PUBLIC_FRAPPE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Access Gateway Configuration
# -----------------------------------------------------------------------------
# CORS allowed origins (comma-separated, supports wildcards)
ALLOWED_ORIGINS=http://localhost:*,http://127.0.0.1:*

# Access Gateway public URL
NEXT_PUBLIC_ACCESS_GATEWAY_URL=http://localhost:3001

# -----------------------------------------------------------------------------
# Mobile App Configuration (Expo)
# -----------------------------------------------------------------------------
# For Android Emulator, use 10.0.2.2 instead of localhost
EXPO_PUBLIC_FRAPPE_URL=http://10.0.2.2:8000
EXPO_PUBLIC_ACCESS_GATEWAY_URL=http://10.0.2.2:3001
EXPO_PUBLIC_PROJECT_ID=

# -----------------------------------------------------------------------------
# CMS/MDVR Server Configuration (for camera parser)
# -----------------------------------------------------------------------------
# CMS servers can be configured in the database (cms_servers table)
# These environment variables are used as fallback when no database config exists
# Also used by the fleet-monitor app
CMS_HOST=your-cms-server.local
CMS_WEB_PORT=8080
CMS_STREAM_PORT=6604
CMS_STORAGE_PORT=6611
CMS_DOWNLOAD_PORT=6609
CMS_USERNAME=admin
CMS_PASSWORD=your-cms-password

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
LOG_LEVEL=info
